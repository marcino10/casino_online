<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
  <title>Poker | Big Win Casino</title>
  <link rel="stylesheet" href="/css/pokerGame.css" />
</head>
<body>
    <main class="poker-game">
        {{#unless isStarted}}
            <div class="waiting-popup" id="waiting">
                <div class="waiting-content">
                    <p>Waiting for host to start the game</p>
                    {{#if isHost}}
                        <button id="start-game-btn">Start Game</button>
                    {{/if}}
                    <p>players: 1/10</p>
                    <p id="start-status"></p>
                </div>
                </div>
        {{/unless}}
        <div class="table">
            <div class="players-container" id="playersContainer"></div>

            <div class="deck">
                <img class="card" src="/img/deck/back_red.webp" alt="Deck">
            </div>

            <div class="board">
                <img class="card" id="board-card-template" src="" alt="Card" style="display: none;" />
            </div>

            <div class="hand">
                <div class="player-hand">
                    <div class="player-card">
                        <img class="card hand-card front self-front" src="" alt="Card back" />
                        <img class="card hand-card back" src="/img/deck/back_red.webp" alt="Card front" />
                    </div>
                    <div class="player-card">
                        <img class="card hand-card front self-front" src="" alt="Card back" />
                        <img class="card hand-card back" src="/img/deck/back_red.webp" alt="Card front" />
                    </div>
                </div>
            </div>
    </div>

    <div class="action-panel">
        <button class="fold">Fold</button>
        <button class="check">Check</button>
        <button class="raise">Raise</button>
    </div>


        <!-- Developer Panel -->
        <div class="dev-panel" style="display: none;">
            <h3>Dev Tools</h3>
            <div class="dev-group">
                <button id="dev-deal">Deal Hand</button>
                <button id="dev-flop">Show Flop</button>
                <button id="dev-turn">Show Turn</button>
                <button id="dev-river">Show River</button>
                <button id="dev-reset">Reset Board</button>
            </div>
            <div class="dev-group">
                <div id="potDisplay">Pot: $0</div>
                <input type="number" id="potInput" placeholder="Set pot value" />
                <button id="dev-set-pot">Set Pot</button>

                <label><input type="checkbox" id="dev-ai-toggle" /> AI Enabled</label>
            </div>
            <div class="dev-log" id="dev-log"></div>

            <h3>Deck Manager</h3>

            <div class="dev-group">
                <button id="reset-deck">Reset Deck</button>
                <button id="shuffle-deck">Shuffle</button>
                <button id="deal-to-players">Deal to Players</button>
                <button id="deal-to-board">Deal to Board</button>
                <button id="burn-card">Burn Card</button>
            </div>

            <div class="deck-state">
                <p><strong>Deck:</strong></p>
                <div id="deck-list" class="deck-list"></div>
            </div>
        </div>


    </main>
    <p id="playerNick" style="display: none;">{{ nick }}</p>
    <script src="/socket.io/socket.io.js" defer></script>
    <script defer>
        window.gameData = JSON.parse('{{{gameData}}}');
        window.isStarted = {{isStarted}};
    </script>
    <script type="module" src="/js/pokerGame.js" defer ></script>
    <script type="module" src="/js/pokerReveal.js" defer></script>
</body>
</html>
